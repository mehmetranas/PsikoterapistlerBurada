@using System.Web.UI.WebControls
@model IEnumerable<PsikoterapsitlerBurada.Models.ViewModels.QuestionViewModel>


@foreach (var question in Model)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-8">
                    <p>Bu soruyu soran: 
                        <a href="@Url.Action("UserProfile", "User",
                                     new {id = question.WhoAsked.Id})">
                            <span class="tag">@question.WhoAsked.UserName</span>
                        </a>
                    </p> 
                </div>
                <div class="col-md-4">
                    @if (question.Answers.Count > 0)
                    {
                        @Html.ActionLink("Cevabı Gör", "GetAnswers", "Answers", new {id = question.Id}, new {@class = "btn btn-link btn-sm"})
                    }
                    else
                    {
                        <span>Henüz Cevaplanmadı</span>
                    }
                </div>
            </div>
        </div>
        <div class="panel-body">
            @question.QuestionText
        </div>
    </div>
}

