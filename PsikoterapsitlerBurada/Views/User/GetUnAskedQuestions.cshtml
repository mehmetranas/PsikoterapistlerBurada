@model IEnumerable<PsikoterapsitlerBurada.Core.Models.ViewModels.QuestionViewModel>
@{
    ViewBag.Title = "GetUnAskedQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sorulmayan Sorular</h2>

@foreach (var question in Model)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <span>Bu soruyu kimlere sormak istersiniz? </span>
            <span>
                @Html.ActionLink("Seç", "SelectUserToAskQuestion", "Question", new {id = question.Id}, null)
            </span>
        </div>
        <div class="panel-body">
            @question.QuestionText
        </div>
    </div>
}
